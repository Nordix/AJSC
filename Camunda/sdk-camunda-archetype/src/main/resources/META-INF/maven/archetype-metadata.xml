				<include>**/*.map</include>
				<include>**/*.xml</include>
				<include>**/*.xml</include>
				<include>**/*.html</include>
				<include>**/*.jsp</include>
				<include>**/*.bpmn</include>
				<include>**/*.xhtml</include>
				<include>**/*.jsf</include>
			</includes>
