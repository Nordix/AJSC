			<directory>src/test/resources</directory>
			<includes>
				<include>**/*.sql</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>.project</include>
				<include>.classpath</include>
			</includes>
		</fileSet>
